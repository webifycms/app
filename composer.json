{
  "name": "getonecms/app",
  "description": "OneCMS is a content management application that aims to simplify the process of crafting beautiful web applications for the end-user.",
  "keywords": [
    "onecms",
    "cms",
    "cms project",
    "php cms",
    "yii2 cms"
  ],
  "homepage": "https://www.getonecms.com/",
  "type": "project",
  "support": {
    "issues": "https://github.com/getonecms/app/issues?state=open",
    "source": "https://github.com/getonecms/app"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": ">=8.1",
    "yiisoft/yii2": "^2.0",
    "oomphinc/composer-installers-extender": "^2.0",
    "getonecms/ext-base": "dev-development",
    "getonecms/ext-admin": "dev-development",
    "getonecms/ext-user": "dev-development",
    "getonecms/theme-oneten": "dev-development",
    "getonecms/theme-onetwenty": "dev-development"
  },
  "require-dev": {
    "getonecms/dev-tools": "*",
    "phpunit/phpunit": "^9.5",
    "yiisoft/yii2-debug": "~2.1.0",
    "yiisoft/yii2-faker": "~2.0.0"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    },
    {
      "type": "path",
      "url": "../onecms-ext-base"
    },
    {
      "type": "path",
      "url": "../onecms-ext-admin"
    },
    {
      "type": "path",
      "url": "../onecms-ext-user"
    },
    {
      "type": "path",
      "url": "../onecms-theme-oneten"
    },
    {
      "type": "path",
      "url": "../onecms-theme-onetwenty"
    },
    {
      "type": "path",
      "url": "../onecms-dev-tools"
    }
  ],
  "config": {
    "process-timeout": 1800,
    "fxp-asset": {
      "enabled": false
    },
    "allow-plugins": {
      "yiisoft/yii2-composer": true,
      "oomphinc/composer-installers-extender": true,
      "composer/installers": true
    }
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Test\\": "test/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "yii\\composer\\Installer::postInstall"
    ],
    "post-create-project-cmd": [
      "yii\\composer\\Installer::postCreateProject",
      "yii\\composer\\Installer::postInstall"
    ],
    "code-sniff": [
      "php-cs-fixer fix --verbose --dry-run --diff --show-progress=dots"
    ],
    "code-format": [
      "php-cs-fixer fix --verbose --show-progress=dots"
    ],
    "code-analyze": [
      "phpstan"
    ]
  },
  "optimize-autoloader": true,
  "extra": {
    "installer-types": [
      "onecms-extension",
      "onecms-theme"
    ],
    "installer-paths": {
      "extensions/{$vendor}/{$name}/": [
        "type:onecms-extension"
      ],
      "themes/{$name}/": [
        "type:onecms-theme"
      ]
    },
    "yii\\composer\\Installer::postCreateProject": {
      "setPermission": [
        {
          "runtime": "0777",
          "public/assets": "0777",
          "bin/yii": "0755"
        }
      ]
    },
    "yii\\composer\\Installer::postInstall": {
      "generateCookieValidationKey": [
        "config/framework/web.php"
      ]
    }
  }
}